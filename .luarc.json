{
    "diagnostics": {
        "disable": [
            "deprecated"
        ]
    },
    "runtime": {
        "version": "LuaJIT",
        "nonstandardSymbol": [
            "/**/",
            "//",
            "!",
            "!=",
            "&&",
            "||",
            "continue"
        ],
        "special": {
            "include": "dofile"
        }
    },
    "workspace": {
        "library": [
            ".vscode/client",
            ".vscode/server",
            ".vscode/types"
        ],
        "ignoreDir": [
            ".vscode",
            ".gemini"
        ],
        "checkThirdParty": false
    },
    "format": {
        "defaultConfig": {
            "keep_simple_control_block_one_line": true
        }
    }
}
